<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingTop="10dp"
    android:paddingLeft="10dp"
    android:id="@+id/linearLayout2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/grid_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="TODO"
        app:srcCompat="@drawable/head_5" />

    <TextView
        android:id="@+id/level_bg"
        android:layout_width="35dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="86dp"
        android:background="@drawable/level_bg_1"
        android:text=""
        android:textSize="14sp" />

    <TextView
        android:id="@+id/grid_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="90dp"
        android:textColor="#000000"
        android:text="普通"
        android:textSize="14sp" />

    <TextView
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="98dp"
        android:background="@drawable/corners_bg"
        android:alpha="0.5"
        android:text=""
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/grid_text"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="98dp"
        android:textColor="#FFFFFF"
        android:text="test"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/grid_job_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="50dp"
        app:srcCompat="@drawable/job_1" />

    <ImageView
        android:id="@+id/grid_race_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="25dp"
        app:srcCompat="@drawable/race_1" />



</RelativeLayout>